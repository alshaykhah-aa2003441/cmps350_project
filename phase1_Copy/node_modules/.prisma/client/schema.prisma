// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id               Int    @id @default(autoincrement())
  name             String
  surname          String
  shipping_address String
  username         String @unique
  password         String
  balance          Float

  purchases Purchase[]
}

model Seller {
  id          Int    @id @default(autoincrement())
  company_name String
  username    String @unique
  password    String
  bank_account Int

  // a seller can sell/add many items
  items Item[]
  sales Purchase[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

model Item {
  id       Int    @id @default(autoincrement())
  name     String @unique
  image    String
  quantity Int
  price    Float
  seller_id Int

  // an item can be added by one seller
  seller    Seller     @relation(fields: [seller_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  purchases Purchase[]
}

model Purchase {
  id       Int    @id @default(autoincrement())
  buyerId  Int
  sellerId Int
  itemId     Int
  quantity Int
  price    Float
  zip      Int
  phone    Int
  address  String

  // relation
  Customer Customer @relation(fields: [buyerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  Seller   Seller   @relation(fields: [sellerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  Item     Item     @relation(fields: [itemId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
