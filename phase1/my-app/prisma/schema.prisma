// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Customer {
  id              Int    @id @default(autoincrement())
  name            String
  surname         String
  shippingAddress String
  username        String @unique
  password        String
  balance         Float
}

model Seller {
  id          Int    @id @default(autoincrement())
  name        String
  username    String @unique
  password    String
  companyName String
  bankAccount Int

  // a seller can sell many items
  // or remove it and add sale model
  items Item[]
}

model Admin {
  id       Int    @id @default(autoincrement())
  name     String
  username String @unique
  password String
}

model Item {
  id       Int    @id @default(autoincrement())
  name     String
  image    String
  quantity Int
  price    Float
  sellerId Int

  // an item can be added by one seller
  Seller Seller @relation(fields: [sellerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Purchase {
  // it should have the username/id of the customer who purchased the item
  // + the id/name of the purchased item
  // quantity + price
  id           Int    @id @default(autoincrement())
  customerId   Int
  custUsername String
  address      String
  sellerId     Int
  itemId       Int
  itemName     String
  quantity     Int
  price        Float

  // relation
}



